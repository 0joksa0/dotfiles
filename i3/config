# set mod
set $mod Mod4
set $term kitty
# set font
font pango:MesloLGS Nerd Font Mono 11

### Runnig apps in background ###
exec_always --no-startup-id setxkbmap -layout us,rs,rs -variant ,latin -option grp:win_space_toggle


# exec xinput set-prop 'DELL0979:00 04F3:30C4 Touchpad' 'libinput Natural Scrolling Enabled' 1
